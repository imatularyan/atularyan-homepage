{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.jsx",
    "lib/theme.js",
    "pages/index.js",
    "pages/_app.js",
    "components/BlogPost.js",
    "components/Footer.js",
    "components/Navbar.js",
    "components/Animate.js"
  ],
  "exclude": ["node_modules"]
}
